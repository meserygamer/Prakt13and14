<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:vm="using:TeachersTestAppWithLogging.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="TeachersTestAppWithLogging.Views.AuthorizationUC"
			 x:DataType="vm:AuthorizationUCViewModel">

	<Design.DataContext>
		<vm:AuthorizationUCViewModel/>
	</Design.DataContext>

	<Grid>

		<Grid.RowDefinitions>
			<RowDefinition/>
			<RowDefinition/>
			<RowDefinition/>
			<RowDefinition/>
		</Grid.RowDefinitions>

		<Label Grid.Row="0"
			   Content="Авторизация"
			   FontSize="22"
			   HorizontalAlignment="Center"
			   FontWeight="Bold"/>

		<HeaderedContentControl Grid.Row="1"/>

		<HeaderedContentControl Grid.Row="2"/>

		<Button Grid.Row="3"
				HorizontalAlignment="Center"
				Height="40"
				Width="250"/>

	</Grid>
	
</UserControl>
